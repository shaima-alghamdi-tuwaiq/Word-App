<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/letterListFragment">

    <fragment
        android:id="@+id/letterListFragment"
        android:name="com.example.wordsapp.ui.LetterListFragment"
        android:label="@string/fragment_letter_title"
        tools:layout="@layout/fragment_letter_list" >
        <action
            android:id="@+id/action_letterListFragment_to_wordListFragment"
            app:destination="@id/wordListFragment">

            <argument android:name="letter"
                app:argType="string"/>
        </action>

    </fragment>

    <fragment
        android:id="@+id/wordListFragment"
        android:name="com.example.wordsapp.ui.WordListFragment"
        android:label="@string/fragment_word_title"
        tools:layout="@layout/fragment_word_list" />
</navigation>